{
  "name": "pdm",
  "displayName": "PDM",
  "description": "Task provider for PDM, a Python project manager.",
  "version": "0.0.1",
  "publisher": "gabdug",
  "repository": "https://github.com/gabdug/vscode-pdm",
  "icon": "static/pdm_icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "license": "MIT",
  "categories": [
    "Other"
  ],
  "keywords": [
    "pdm",
    "python",
    "task provider",
    "pyproject.toml"
  ],
  "preview": true,
  "pricing": "Free",
  "scripts": {
    "clean": "node ./scripts/clean.js",
    "lint": "eslint -c .eslintrc.js --ext .ts .",
    "pretest": "npm run test-compile && npm install",
    "prettier": "prettier --write '**/*.{ts,json,md,hbs,yml,js}'",
    "_test-compile": "npm run clean && tsc -p ./ && npm run webpack && cp -r ./src/worker ./out",
    "test-compile": "npm run clean && tsc -p ./ && npm run webpack",
    "test": "node ./out/test/suite/index.js",
    "version": "node ./scripts/version.js && git add CHANGELOG.md",
    "vscode:prepublish": "webpack --mode production",
    "watch": "tsc --watch -p ./",
    "webpack-dev": "webpack --mode development --watch",
    "webpack": "webpack --mode development",
    "chrome": "npm run webpack && vscode-test-web --browserType=chromium --extensionDevelopmentPath=. sampleWorkspace",
    "vscodetest": "vscode-test"
  },
  "devDependencies": {
    "@types/eslint": "^8.56.0",
    "@types/minimatch": "^5.1.2",
    "@types/node": "^12.12.0",
    "@types/vscode": "^1.85.0",
    "@types/webpack-env": "^1.18.4",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/test-web": "^0.0.50",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.56.0",
    "path-browserify": "^1.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^4.0.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "inversify": "^6.0.2",
    "minimatch": "^9.0.3",
    "process": "^0.11.10",
    "reflect-metadata": "^0.2.1",
    "toml-eslint-parser": "^0.9.3",
    "util": "^0.12.5",
    "vscode-uri": "^3.0.8"
  },
  "main": "./dist/extension",
  "$comment": "Browser is not supported for now (needs PDM locally, Python WASM is not ready yet...)",
  "_browser": "./dist/web-extension",
  "activationEvents": [
    "onTaskType:pdm",
    "onLanguage:toml",
    "workspaceContains:pyproject.toml",
    "workspaceContains:pdm.lock"
  ],
  "capabilities": {
    "virtualWorkspaces": {
      "supported": "limited",
      "description": "Functionality that requires running the 'pdm' command is not available in virtual workspaces."
    },
    "untrustedWorkspaces": {
      "supported": "limited",
      "description": "This extension executes tasks, which require trust to run."
    }
  },
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "pdm",
          "name": "PDM Scripts",
          "when": "pdm:showScriptExplorer",
          "icon": "$(toml)",
          "visibility": "hidden",
          "contextualTitle": "PDM scripts"
        }
      ]
    },
    "commands": [
      {
        "command": "pdm.runScript",
        "title": "Run script",
        "icon": "$(run)",
        "category": "PDM"
      },
      {
        "command": "pdm.debugScript",
        "title": "Debug script",
        "icon": "$(debug)",
        "category": "PDM"
      },
      {
        "command": "pdm.openScript",
        "title": "Go to script definition",
        "category": "PDM"
      },
      {
        "command": "pdm.runInstall",
        "title": "Install deps - pdm install",
        "category": "PDM"
      },
      {
        "command": "pdm.refresh",
        "title": "Reload pyproject.toml(s) and PDM scripts",
        "icon": "$(refresh)",
        "category": "PDM"
      },
      {
        "command": "pdm.runSelectedScript",
        "title": "Run Selected Script",
        "category": "PDM"
      },
      {
        "command": "pdm.runScriptFromFolder",
        "title": "Run script from folder",
        "category": "PDM"
      },
      {
        "command": "pdm.runScriptFromFile",
        "title": "Run script from pyproject.toml",
        "category": "PDM"
      },
      {
        "command": "pdm.packageManager",
        "title": "PDM package managers?",
        "category": "PDM"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "$comment": "Reload automatically on file edit. Button in file explorer `PDM scripts` if needed.",
          "command": "pdm.refresh",
          "when": "false"
        },
        {
          "command": "pdm.runScript",
          "when": "false"
        },
        {
          "command": "pdm.debugScript",
          "when": "false"
        },
        {
          "command": "pdm.openScript",
          "when": "false"
        },
        {
          "command": "pdm.runInstall",
          "when": "false"
        },
        {
          "command": "pdm.runSelectedScript",
          "when": "false"
        },
        {
          "command": "pdm.runScriptFromFolder",
          "when": "false"
        },
        {
          "command": "pdm.packageManager",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "pdm.runSelectedScript",
          "when": "resourceFilename == 'pyproject.toml' && resourceScheme == file",
          "group": "navigation@+1"
        }
      ],
      "view/title": [
        {
          "command": "pdm.refresh",
          "when": "view == pdm",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pdm.openScript",
          "when": "view == pdm && viewItem == pyprojectTOML",
          "group": "navigation@1"
        },
        {
          "command": "pdm.runInstall",
          "when": "view == pdm && viewItem == pyprojectTOML",
          "group": "navigation@2"
        },
        {
          "command": "pdm.openScript",
          "when": "view == pdm && viewItem == script",
          "group": "navigation@1"
        },
        {
          "command": "pdm.runScript",
          "when": "view == pdm && viewItem == script",
          "group": "navigation@2"
        },
        {
          "command": "pdm.runScript",
          "when": "view == pdm && viewItem == script",
          "group": "inline"
        }
      ],
      "explorer/context": [
        {
          "when": "config.pdm.enableRunFromFolder && explorerViewletVisible && explorerResourceIsFolder && resourceScheme == file",
          "command": "pdm.runScriptFromFolder",
          "group": "2_workspace"
        }
      ]
    },
    "configuration": {
      "id": "pdm",
      "type": "object",
      "title": "PDM",
      "properties": {
        "pdm.autoDetect": {
          "type": "string",
          "enum": [
            "off",
            "on"
          ],
          "default": "on",
          "scope": "resource",
          "description": "Controls whether PDM scripts should be automatically detected from your pyproject.toml files."
        },
        "pdm.runQuiet": {
          "title": "Run Quiet",
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "markdownDescription": "Run pdm commands with the `--quiet` option."
        },
        "pdm.packageManager": {
          "scope": "resource",
          "type": "string",
          "enum": [
            "auto",
            "pdm"
          ],
          "enumDescriptions": [
            "Automatically detect the package manager to use for installing dependencies.",
            "Use PDM"
          ],
          "default": "auto",
          "description": "Which package manager to use for installing dependencies. Only PDM is supported for now."
        },
        "pdm.exclude": {
          "type": [
            "string",
            "array"
          ],
          "items": {
            "type": "string"
          },
          "description": "Configure glob patterns for folders that should be excluded from automatic script detection.",
          "scope": "resource"
        },
        "pdm.enableRunFromFolder": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "description": "Enable running PDM scripts contained in a folder from the explorer context menu."
        },
        "pdm.scriptExplorerAction": {
          "type": "string",
          "enum": [
            "open",
            "run"
          ],
          "markdownDescription": "The default click action used in the PDM Scripts Explorer: open or run, the default is open.",
          "scope": "window",
          "default": "open"
        },
        "pdm.scriptExplorerExclude": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "markdownDescription": "An array of regular expressions that indicate which scripts should be excluded from the PDM Scripts view.",
          "scope": "resource",
          "default": []
        },
        "pdm.scriptHover": {
          "type": "boolean",
          "description": "Display hover with `Run` command for scripts.",
          "default": true,
          "scope": "window"
        },
        "pdm.pdmPath": {
          "type": "string",
          "description": "The path to the PDM executable to use. Useful when the PDM executable is not on the PATH environment variable, not needed otherwise.",
          "default": "",
          "scope": "resource",
          "ignoreSync": "true"
        }
      }
    },
    "taskDefinitions": [
      {
        "type": "pdm",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The PDM task to customize"
          },
          "file": {
            "type": "string",
            "description": "The PDM file that provides the task. Can be omitted."
          }
        }
      }
    ]
  }
}
